<div class="table-responsive">
  <table class="table table">
    <thead>
      <tr>
        <th>Events</th>
      </tr>
    </thead>
    <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event_path(event.id) %></td>
        <td><%#= event.discription %></td>
        <td><%#= button_to "Publish", event_publish_path(event), method: :put, params: { status: :listed, :id => event.id } %></td>
        <td>
          <%= button_to "Delete", event_path(event.id),
              method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
