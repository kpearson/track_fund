<div class="row">
  <div class="well col col-sm-8 col-sm-offset-2">
    <div class="table-responsive">
      <table class="table table">
        <thead>
          <tr>
            <th>Events</th>
            <th><%= link_to "Create New Event", new_event_path, class: "btn btn-primary pull-right" %></th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event_path(event.id) %></td>
          <td><%#= event.discription %></td>
          <td> <%#= button_to "Publish", event_publish_path(event), method: :put, params: { status: :listed, :id => event.id } %></td>
          <td> <%= button_to "Delete",  { action: "destroy", id: event.id },
                                          method: :delete, data: { confirm: "Are you sure?" }%>
          </td>
        </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
