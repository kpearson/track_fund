<div class="container">
  <div class="row">
    <div class="well col col-sm-8 col-sm-offset-2">
    <div class="container col col-sm-4 col-sm-offset-4">
      <%= link_to "Create New Event", new_event_path, class: "center-block btn btn-primary btn-lg" %>
    </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="table-responsive">
      <table class="table table">
        <thead>
          <tr>
            <td class="values h3">Event List</td>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event_path(event.id), class: "btn btn-default btn-med" %></td>
        </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
