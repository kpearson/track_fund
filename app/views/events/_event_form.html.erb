  <div class="form-group">
    <%= f.label "event name", class: "col-sm-2" %>
    <div class="col-md-10">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "start date", class: "col-sm-2" %>
    <div class="col-md-4 input-group" id="start-date" >
      <%= f.datetime_field :start_time, class: "form-control", required: true  %>
      <span class="input-group-addon">
        <span class="fa fa-calendar"></span>
      </span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "end date", class: "col-sm-2" %>
    <div class="col-md-4 input-group" id="end-date" >
      <%= f.datetime_field :end_time, class: "form-control", required: true  %>
      <span class="input-group-addon">
        <span class="fa fa-calendar"></span>
      </span>
    </div>
  </div>
  <%= f.fields_for :contact do |contact| %>
    <div class="form-group">
      <%= contact.label "contact name", class: "col-sm-2" %>
      <div class="col-md-10">
        <%= contact.text_field :name, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= contact.label  "Contact phone", class: "col-sm-2" %>
      <div class="col-md-10">
        <%= contact.text_field :phone, class: "form-control", required: true  %>
      </div>
    </div>
    <div class="form-group">
      <%= contact.label  "Contact email", class: "col-sm-2" %>
      <div class="col-md-10">
        <%= contact.text_field :email, class: "form-control", required: true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
      </div>
    </div>
  <% end %>
  <%= f.hidden_field :status, value: "unlisted" %>
  <div class="control-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Back', :back, class: "btn btn-default" %>
    </div>
  </div>

<script type="text/javascript">
  $(function () {
    $('#start-date').datetimepicker({
      icons: {
        time: "fa fa-clock-o",
        date: "fa fa-calendar",
        previous: "fa fa-arrow-left",
        next: "fa fa-arrow-right"
      }
    });

    $('#end-date').datetimepicker({
      icons: {
        time: "fa fa-clock-o",
        date: "fa fa-calendar",
        previous: "fa fa-arrow-left",
        next: "fa fa-arrow-right"
      }
    });

    $("#start-date").on("dp.change", function (e) {
      $('#end-date').data("DateTimePicker").minDate(e.date);
    });

    $("#end-date").on("dp.change", function (e) {
        $('#start-date').data("DateTimePicker").maxDate(e.date);
    });
  });
</script>
