<div class="row">
  <div class="col col-sm-8 col-sm-offset-2">
    <div class="well">
      <h1>Event {name} Dashboard</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col col-sm-2"></div>
  <div class="col col-sm-8">
    <div class="panel panel-default">
      <div class="panel-heading"><h3>Donors list</h3></div>
      <table class="table table-head">
        <thead>
          <tr>
            <td class="values h5">Name</td>
            <td class="values h5">Amount</td>
            <td class="values h5">Status</td>
            <td class="values h5">Last Contact</td>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td><%= link_to person.first_name + " " + person.last_name, person_path(person.id) %></td>
              <td></td>
              <td class="btn-group">
                <button class="btn btn-info">Status</button>
                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Commited", dashboard_path %></li>
                  <li><a href="#">Paid</a></li>
                  <li><a href="#">Something else here</a></li>
                  <li class="divider"></li>
                  <li><a href="#">Remove from event</a></li>
                </ul>
              </td>
              <td>April 3, 2015</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <nav>
      <ul class="pagination">
        <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
        <li class="active"><%= link_to "back", dashboard_path(next_page: @page_back) %></li>
        <li class="active"><%= link_to "next", dashboard_path(next_page: @page_next) %></li>
        ...
      </ul>
    </nav>
  </div>
</div>

